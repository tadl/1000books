<%= javascript_tag "token = '#{form_authenticity_token}'" %>
<h3>Sign Up New Participant</h3>

<div id="new_list_form">
	  	<% if @parent_name && @parent_card %>
	  		<h5>Parent Name: <%= @parent_name %></h5>
	  		<h5>Parent Card #: <%= @parent_card %></h5>
	  		<input type="hidden" id="parent_name" value="<%= @parent_name %>">
	  		<input type="hidden" id="parent_card" value="<%= @parent_card %>">
	  		<h5>Participants Registered to This Parent:</h5>
	  		<% @already_registered.each do |kid| %>
	  			<p><a onclick="load_update('<%= kid.id %>','<%=escape_javascript(@parent_card)%>','<%=escape_javascript(@parent_name)%>', token)"><%= kid.name %></a></p>
	  		<% end %>
	  	<% else %>
	  		<div class="input-group padding-all">
	  			<label for="parent_name">Parent Name:</label>
	  			<input id="parent_name" type="text" class="form-control" placeholder="">
	  		</div>
	  		<div class="input-group padding-all">
	  			<label for="parent_card">Parent Card #:</label>
	  			<input id="parent_card" type="text" class="form-control" placeholder="">
			</div>
		<% end %>
	<div class="input-group padding-all">
	  <label for="kid_name">Participant Name:</label>
	  <input id="kid_name" type="text" class="form-control" placeholder="">
	</div>
	<div id="messages"></div>
	<div class="btn-group padding-all">
		<button type="button" class="btn btn-success" onclick="participant_list('false', token)">Save</button>
	</div>
	<div class="btn-group padding-all">
		<button type="button" class="btn btn-success" onclick="participant_list('true', token)">Save and Add Another</button>
	</div>
</div>
<div id="messages" class="padding-all">
</div>